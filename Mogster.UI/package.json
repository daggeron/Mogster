{
  "name": "mogster",
  "version": "0.0.2",
  "author": {
    "name": "Jason Crown",
    "email": "jason@dc20.net"
  },
  "productName": "Mogster",
  "description": "UI side of Mogster",
  "main": "dist-js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "lint": "\"tsc && xo",
    "scripts": "xcopy /Y dist-js\\ffxiv\\Combatant.js dist-js\\scripts\\ && xcopy /Y source\\soundplayer\\sound.html dist-js\\soundplayer\\",
    "postinstall": "electron-builder install-app-deps",
    "start": "tsc && yarn scripts && electron .",
    "pack": "tsc && yarn scripts && electron-builder --dir",
    "dist": "tsc && yarn scripts && electron-builder"
  },
  "devDependencies": {
    "@types/electron-store": "^1.3.1",
    "@types/node": "^12.6.8",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "eslint-config-xo-typescript": "^0.15.0",
    "electron": "4.2.8",
    "electron-builder": "^21.1.1",
    "electron-packager": "^14.0.1",
    "stylelint": "^10.0.1",
    "stylelint-config-xo": "^0.15.0",
    "typescript": "^3.5.3",
    "xo": "^0.24.0"
  },
  "dependencies": {
    "bufferutil": "^4.0.1",
    "config": "^3.2.2",
    "discord.js": "github:discordjs/discord.js",
    "electron-edge-js": "^12.0.0",
    "electron-log": "^3.0.6",
    "electron-positioner": "^4.1.0",
    "electron-root-path": "^1.0.9",
    "eventemitter2": "^5.0.1",
    "ffmpeg-static": "github:serious-casuals/ffmpeg-static#master",
    "fs-nextra": "^0.4.5",
    "klasa": "github:serious-casuals/klasa",
    "mobx": "^5.13.0",
    "node-opus": "^0.3.2",
    "rethinkdbdash": "^2.3.31",
    "serialize-error": "^4.1.0",
    "vm2": "^3.8.2",
    "winston": "^3.2.1",
    "zucc": "^0.1.2",
    "electron-store": "3.3.0"

  },
  "xo": {
    "extends": "xo-typescript",
    "extensions": [
      "ts"
    ],
    "envs": [
      "node",
      "browser"
    ],
    "rules": {
      "valid-jsdoc": "off",
      "import/first": "off",
      "import/newline-after-import": "off",
      "@typescript-eslint/no-object-literal-type-assertion": "off",
      "@typescript-eslint/indent": "off"
    },
    "prettier": true
  },
  "stylelint": {
    "extends": "stylelint-config-xo",
    "rules": {
      "declaration-no-important": null,
      "selector-class-pattern": null,
      "selector-id-pattern": null,
      "no-duplicate-selectors": null,
      "rule-empty-line-before": null
    }
  },
  "prettier": {
    "printWidth": 100,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "proseWrap": "never",
    "endOfLine": "lf"
  },
  "build": {
    "files": [
      "**/*",
      "!src${/*}",
      "!media${/*}",
      "!audio${/*}",
      "!discord${/*}",
      "!plugins${/*}",
      "!scripts${/*}",
      "!config${/*}"
    ],
    "appId": "net.dc20.mogster",
    "extraFiles": [
      {
        "from": "dist-js\\scripts",
        "to": "scripts",
        "filter": [ "**/*", "!**/*.map" ]
      },
      "audio",
      "discord",
      "plugins",

      "config"
    ]
  }
}
